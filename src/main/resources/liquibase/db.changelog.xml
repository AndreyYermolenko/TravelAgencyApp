    <changeSet id="1.0.13" author="andrey.yermolenko">
        <createTable tableName="travel_tour">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="destination" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="begin_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="end_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="cost" type="FLOAT">
                <constraints nullable="false"/>
            </column>

            <column name="max_count" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="current_count" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR">
            </column>

            <column name="travel_carrier_id" type="INT">
            </column>

            <column name="resort_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

